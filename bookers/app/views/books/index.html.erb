<body>
<h1>Books</h1>

<table class="columns">
  <tr>
    <th class="column">Title</th>
    <th class="column">Body</th>
    <th class="column"></th>
  </tr>

  <div class="book-table">
    <% @books.each do |book| %>
      <tr>
        <td class="book-title"><%= book.title %></td>
        <td class="book-body"><%= book.body %></td>
        <td><%=link_to "Show", book_path(book.id), class:"link" %></td>
        <td><%=link_to "Edit", edit_book_path(book.id), class:"link" %></td>
        <td><%=link_to "Destroy", book_path(book.id), method: :delete, class:"link","data-confirm" => "Are you Sure?" %></td>
      </tr>
    <% end %>
  </div>
 </table>

<div class="create-box">
  <div class="create-title-box">
    <h2 class="create-heading">New book</h2>
  </div>

  <div class="create-form">
    <%=form_with model:@book, local:true do |book| %>
    <p class="create-title">Title</p>
    <%=book.text_field :title, class:"field"%>
    <p class="create-Body">Body</p>
    <%=book.text_area :body, class:"field"%>
  </div>

  <div class="actions">
    <%=book.submit 'Create Book' %>
  </div>
<% end %>
</div>

</body>